{% extends "AthenaIhmBundle::layout.html.twig" %}

{% block athena_body %}

	{{ include("AthenaIhmBundle:Main:header.html.twig") }}

	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
		Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
	{% else %}
		<a href="{{ path('fos_user_security_login') }}">Connexion</a>
	{% endif %}


	<div class="section center z-depth-3">
		<h5>Programmer une sauvegarde exceptionnelle</h5>
	</div>

	<div class="divider"></div>

	<div>
		<div class="container">
			<div class="row">
				<div class="col s12 m12 l12">
					<div class="card">
						<div class="card-content black-text">
					{% if FlagDP is empty %}
						{% if FlagEx is empty %}
							<form class="center"method="post" action="{{ path('athena_get_excep') }}">
									<p class="center">Voulez-vous programmer une sauvegarde exceptionnelle ce soir ? </p>
								<div class="center card-action">
									<button class="btn waves-effect waves-light green" type="submit" name="action">Oui
										<i class="small material-icons right">send</i>
									</button>
									<a class="waves-effect waves-light btn red" href="{{ path('athena_core') }}">Non</a>
								</div>
							</form>
						{% else %}
							<form>
								<p>Une sauvegarde exceptionnelle est déja programmée ce soir </p>
								<a href="{{ path('athena_core') }}">Retour à l'index</a></p>
							</form>
						{% endif %}
					{% else %}
							<form>
								<p>Il n'est pas possible de prévoir une sauvegarde exceptionnelle si les sauvegardes sont désactivées </p>
								<a href="{{ path('athena_core') }}">Retour à l'index</a></p>
							</form>
					{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
